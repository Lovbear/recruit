.searchinput{
    line-height:80rpx;
    height: 80rpx;
    padding-left:100rpx;
}

.modal{
  position: fixed;
  top: 0;
  left: 0;
  right:0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index:2;
}

.modal .modal-body{
   position: relative;
   margin:40% auto 0;
   width:540rpx;
   height:253rpx;
   background:rgba(255,255,255,0.82);
   border-radius:13rpx;
} 

