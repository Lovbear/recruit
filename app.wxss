    color:rgba(51,51,51,1);
}

.company .label{
    margin-top: 24rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.company .label .item{
    padding: 0 16rpx;
    border-right: 2rpx solid #D8D8D8;
}

.company .label .item:last-child{
  border-right: none;
}

.right-arrow {
    display :inline-block;
    position: relative;
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.right-arrow::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 6rpx 6rpx 0 0;
    border-color: #000;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 6rpx;
    margin-top: -9rpx;
}


